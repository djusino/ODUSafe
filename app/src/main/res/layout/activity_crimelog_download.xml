<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download the ODU Crime Log!"
        android:typeface="serif"
        android:textAllCaps="true"
        android:paddingTop="10sp"
        android:textColor="@color/ColorBlack"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="345dp"
        android:layout_height="239dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_weight="0.25"></ImageView>

    <Button
        android:id="@+id/button1"
        android:layout_width="351dp"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:background="@drawable/roundedcancelbutton"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="Start Download"></Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="351dp"
        android:layout_marginTop="20sp"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:background="@drawable/roundedcancelbutton"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:onClick="showDownload"
        android:text="View Downloads"></Button>

</LinearLayout>
